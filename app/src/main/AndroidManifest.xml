<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.ugent.thomasrosseel.ble" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BleListActivity"
            android:label="@string/title_activity_ble_list" >
        </activity>
        <activity
            android:name=".BleDataActivity"
            android:label="@string/title_activity_ble_data" >
        </activity>
        <activity
            android:name=".ServiceActivity"
            android:label="@string/title_activity_service" >
        </activity>
        <activity
            android:name=".CharacteristicActivity"
            android:label="@string/title_activity_characteristic" >
        </activity>
        <activity
            android:name=".DataActivity"
            android:label="@string/title_activity_data" >
        </activity>
    </application>

</manifest>
